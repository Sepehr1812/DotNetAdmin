@model KanoonInternship.Models.ViewModels.EditViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="text-center">Edit User</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BanUntil"></label>
                        <input asp-for="BanUntil" class="form-control" type="date" />
                        <span class="text-danger" asp-validation-for="BanUntil"></span>
                    </div>

                    <input class="btn btn-primary rounded-1" type="submit" value="Update" />
                </form>
            </div>
        </div>

        <br />
        <a asp-controller="Admin" asp-action="Tables" asp-route-table="All" class="btn btn-info form-control text-white">Return to List</a>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
