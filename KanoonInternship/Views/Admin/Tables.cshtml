
@{
    ViewData["Title"] = "Tables";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info" id="table_name">@(new String(Model)) Users</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-info form-control text-white">Return to Panel</a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Active State</th>
                    <th>Is Admin</th>
                    <th>Banned Until</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/UserList.js"></script>
}
